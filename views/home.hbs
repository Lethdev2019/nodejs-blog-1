<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    {{>header_assets}}
</head>

<body>
<div class="content-page">
    <!-- Start content -->
    <div class="content">
        <div class="container">

            <!-- SECTION FILTER
            ================================================== -->
            {{#if blog_tags}}
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 ">
                        <div class="portfolioFilter">
                            <a href="#" data-filter="*" class="current waves-effect waves-custom">All</a>
                            {{#each blog_tags}}
                                <a href="#" data-filter=".{{this}}" class="waves-effect waves-custom">{{this}}</a>
                            {{/each}}
                        </div>
                    </div>
                </div>
            {{/if}}

            <div class="row port m-b-20">
                <div class="portfolioContainer">
                    {{#each blogs}}
                        {{>client/blog_card blog=this}}
                    {{else}}
                        <h3>
                            No blogs found :(<br/>
                            <a href="/add/blog">Add new</a>
                        </h3>
                    {{/each}}
                </div>
            </div> <!-- End row -->


        </div> <!-- container -->

    </div> <!-- content -->

</div>

{{>footer_assets}}
<script type="text/javascript">
    $(window).load(function () {
        var $container = $('.portfolioContainer');
        $container.isotope({
            filter: '*',
            animationOptions: {
                duration: 750,
                easing: 'linear',
                queue: false
            }
        });

        $('.portfolioFilter a').click(function () {
            $('.portfolioFilter .current').removeClass('current');
            $(this).addClass('current');

            var selector = $(this).attr('data-filter');
            $container.isotope({
                filter: selector,
                animationOptions: {
                    duration: 750,
                    easing: 'linear',
                    queue: false
                }
            });
            return false;
        });
    });
</script>

</body>

</html>
